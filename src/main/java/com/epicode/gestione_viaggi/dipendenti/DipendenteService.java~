package com.epicode.gestione_viaggi.dipendenti;


import lombok.RequiredArgsConstructor;
import org.springframework.stereotype.Service;

@Service
@RequiredArgsConstructor
public class DipendenteService {
    private  final DipendenteRepository dipendenteRepository;

    //Create
        public Dipendente saveDipendente(Dipendente dipendente) {
        return dipendenteRepository.save(dipendente);
    }

    //Read
    public Dipendente getDipendente(Long id) {
        return dipendenteRepository.findById(id).orElse(null);
        //Todo: gestire eccezioni
    }

    //Update
    public Dipendente updateDipendente(Dipendente dipendente) {
        Dipendente dipendente = getDipendente(idDipendente);
        dipendente.setNome(dettagliDipendente.getNome());
        dipendente.setCognome(dettagliDipendente.getCognome());
        dipendente.setEmail(dettagliDipendente.getEmail());

        return dipendenteRepository.save(dipendente);
    }

    //Delete
    public void deleteDipendente(Long id) {
        Dipendente dipendente = getDipendente(id);
        dipendenteRepository.deleteById(id);
    }
}
